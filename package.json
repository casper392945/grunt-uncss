{
  "name": "grunt-uncss",
  "description": "A grunt task for generating CSS files containing only those styles used in your project.",
  "version": "0.8.5",
  "homepage": "https://github.com/uncss/grunt-uncss",
  "author": "Addy Osmani <addyosmani@gmail.com> (https://addyosmani.com/)",
  "maintainers": [
    "Addy Osmani <addyosmani@gmail.com> (https://addyosmani.com/)",
    "XhmikosR <xhmikosr@gmail.com> (https://github.com/XhmikosR)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uncss/grunt-uncss.git"
  },
  "bugs": {
    "url": "https://github.com/uncss/grunt-uncss/issues"
  },
  "license": "MIT",
  "keywords": [
    "gruntplugin",
    "uncss",
    "css"
  ],
  "files": [
    "tasks"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "xo --quiet && grunt test"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "maxmin": "^2.1.0",
    "uncss": "^0.16.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "grunt": "^1.0.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-connect": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-processhtml": "^0.4.1",
    "grunt-simple-mocha": "^0.4.1",
    "load-grunt-tasks": "^4.0.0",
    "time-grunt": "^2.0.0",
    "xo": "^0.23.0"
  },
  "peerDependencies": {
    "grunt": ">=0.4.0"
  },
  "xo": {
    "space": 4,
    "rules": {
      "capitalized-comments": "off",
      "no-else-return": "off",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": "off"
    },
    "overrides": [
      {
        "files": "tests/app/js/main.js",
        "esnext": false
      }
    ]
  }
}
